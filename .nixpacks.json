{
  "providers": ["python"],
  "buildPlan": {
    "phases": {
      "setup": {
        "nixPkgs": ["python310", "gcc", "postgresql"]
      },
      "install": {
        "cmds": [
          "python -m pip install --upgrade pip",
          "pip install -r requirements.txt"
        ]
      }
    }
  },
  "start": {
    "cmd": "cd src && uvicorn mental_health_coach.main:app --host 0.0.0.0 --port $PORT"
  }
} 